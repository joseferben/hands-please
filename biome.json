{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "error",
        "useExhaustiveDependencies": "off"
      }
    },
    "ignore": [".vitest", "node_modules", "dist"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "ignore": [".vitest", "node_modules", "dist"]
  },
  "json": {
    "parser": {
      "allowTrailingCommas": true
    },
    "formatter": {
      "trailingCommas": "none"
    }
  },
  "organizeImports": {
    "enabled": true
  }
}
